Host *
  SetEnv TERM=xterm-256color
  UseKeychain yes
  ConnectTimeout 5
  ConnectionAttempts 3
  Compression yes
  AddKeysToAgent yes
  ExitOnForwardFailure yes
  StrictHostKeyChecking accept-new
  ControlMaster auto
  ControlPersist 600
  ControlPath ~/.ssh/control-%h-%p-%r
  TCPKeepAlive yes
  ServerAliveInterval 60
  ServerAliveCountMax 5
